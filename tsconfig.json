{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@mui/*": ["node_modules/@mui/*"]
    },
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ]
  },
  "include": [
    "./src/**/*",
    "./env.d.ts",
    "./src/**/*.svg",
    "./svg.d.ts" // Include svg.d.ts here
  ],
  "exclude": [
    "node_modules"
  ]
}
